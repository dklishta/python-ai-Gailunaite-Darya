SELECT DISTINCT ?tea ?teaLabel ?type ?typeLabel ?country ?countryLabel ?processingMethod ?processingMethodLabel ?subclass ?subclassLabel ?image
WHERE {
  # Экземпляры чая и его подклассы
  { ?tea wdt:P31 wd:Q6097. } UNION { ?tea wdt:P279* wd:Q6097. }

  # Тип чая (например, зелёный, чёрный)
  OPTIONAL { ?tea wdt:P366 ?type. }

  # Страна происхождения
  OPTIONAL { ?tea wdt:P495 ?country. }

  # Метод обработки (например, ферментация)
  OPTIONAL { ?tea wdt:P2094 ?processingMethod. }

  # Подклассы чая (например, зелёный чай, чёрный чай)
  OPTIONAL { ?tea wdt:P279 ?subclass. }

  # Изображение чая
  OPTIONAL { ?tea wdt:P18 ?image. }

  # Метки на русском и английском
  SERVICE wikibase:label { bd:serviceParam wikibase:language "ru,en". }
}

SELECT DISTINCT ?company ?companyLabel ?countryLabel ?foundingYear ?revenue ?employees ?assets
WHERE {
  # Производители чая
  ?company wdt:P1056 wd:Q6097.

  # Страна
  OPTIONAL { ?company wdt:P17 ?country. }

  # Год основания
  OPTIONAL { ?company wdt:P571 ?foundingYear. }

  # Числовые данные: выручка, сотрудники, активы
  OPTIONAL { ?company wdt:P2139 ?revenue. }    # Выручка
  OPTIONAL { ?company wdt:P1128 ?employees. }   # Число сотрудников
  OPTIONAL { ?company wdt:P2137 ?assets. }      # Активы

  # Метки на русском, английском и других языках
  SERVICE wikibase:label { bd:serviceParam wikibase:language "ru,en,mul". }
}
ORDER BY DESC(COALESCE(?revenue, 0))
